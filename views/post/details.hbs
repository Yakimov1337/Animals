<main>

    <section id="details-page">

        <div class="main_card">
            <div class="card_left">
                <div class="card_datails">

                    <h1>Title: {{post.title}}</h1>
                    <h3>Created by an author: {{post.author.firstName}} {{post.author.lastName}}</h3>
                    <div class="card_animal">
                        <p class="card-keyword">Keyword: {{post.keyword}}</p>
                        <p class="card-location">Location: {{post.location}}</p>
                        <p class="card-date">Date: {{post.createDate}}</p>
                    </div>

                    <p class="disc">Description: {{post.description}}</p>

                    <!-- If there is no registered user, do not display buttons-->
                    {{#if post.hasUser}}
                    <div class="social-btn">
                        <!-- Only for registered user and author of the post -->
                        {{#if post.isAuthor}}
                        <a href="/post/edit/{{post._id}}" class="edit-btn">Edit</a>
                        <a href="/post/delete/{{post._id}}" class="del-btn">Delete</a>
                        {{else}}
                        {{#if post.hasVoted}}
                        <p class="thanks-for-vote">Thanks For Voting</p>
                        <!-- logged in users, who have not yet voted-->
                        {{else}}
                        <a href="/post/voteup/{{post._id}}" class="vote-up">UpVote +1</a>
                        <a href="/post/votedown/{{post._id}}" class="vote-down">DownVote -1</a>
                        <!-- logged in user who has already voted-->
                        {{/if}}
                        {{/if}}


                    </div>
                    {{/if}}
                </div>
            </div>
            <div class="card_right">
                <img src="{{post.image}}" alt="image">
            </div>
        </div>

    </section>



    <section id="votes">

        <div class="vote-info">

            <div class="card_left">
                <div class="card_datails">
                    <h1>Votes</h1>
                    <div class="card_vote">
                        <!-- Show the rating of votes, if there are no votes yet, the number must be 0. -->
                        <p class="PV">Total rating of votes: {{post.rating}}</p>
                    </div>

                    {{#if post.votes}}
                    <p class="disc">People who voted for the post -
                        {{#each post.votes}}
                        {{this.email}},
                        {{/each}}
                    </p>
                    {{else}}
                    <p class="disc">People who voted for the post - No one has voted yet.</p>
                    {{/if}}
                </div>
            </div>
        </div>
    </section>

</main>